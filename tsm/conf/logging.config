#logger.conf
###############################################
#CRITICAL > ERROR > WARNING > INFO > DEBUG > NOTSET
[loggers]
keys=root,run

[logger_root]
level=INFO
handlers=consoleHandler,RotatingFileHander1

[logger_run]
level=DEBUG
handlers=consoleHandler,RotatingFileHander2
qualname=run
propagate=0
###############################################
[handlers]
keys=consoleHandler,RotatingFileHander1,RotatingFileHander2

[handler_consoleHandler]
class=StreamHandler
level=INFO
formatter=form02
args=(sys.stdout,)

[handler_RotatingFileHander1]
class=handlers.RotatingFileHandler
level=INFO
formatter=form01
args=('./log/root.log', 'a', 10*1024*1024, 5)

[handler_RotatingFileHander2]
class=handlers.RotatingFileHandler
level=DEBUG
formatter=form01
args=('./log/run.log', 'a', 10*1024*1024, 5)
###############################################
[formatters]
keys=form01,form02

[formatter_form01]
format=%(asctime)s %(filename)s %(process)d [line:%(lineno)d] %(levelname)s %(message)s
datefmt=%a, %d %b %Y %H:%M:%S

[formatter_form02]
format=%(name)-12s: %(levelname)-8s %(message)s
datefmt=